[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // Mimick behaviour I had set up in NeoVim, where using <leader> followed by 'w' would write the file
      // and <leader> followed by 'q' would close the buffer. In my case, <leader> was set to 'space', so that's
      // what I'm using here.
      "space w": "workspace::Save",
      "space q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-t": "task::Spawn",
      "cmd-shift-d": "editor::MoveLineDown"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-w ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w ctrl-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  }
]
